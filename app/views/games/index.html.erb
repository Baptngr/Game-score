<%# Message de notification %>
<% if notice.present? %>
  <div class="alert alert-success text-center">
    <%= notice %>
  </div>
<% end %>

<% content_for :title, "Games" %>

<div class="container mt-4">
  <h1 class="text-center mb-4">Ligue 1 games score</h1>

  <div class="row">
    <% @games.each do |game| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <%= render game %>
            <a href="<%= game_path(game) %>" class="btn btn-primary d-block mt-3">
              Show this game
            </a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-between mt-4">
    <%= link_to "Voir les teams", teams_path, class: "btn btn-outline-secondary" %>
    <%= link_to "Voir les days", days_path, class: "btn btn-outline-secondary" %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "New game", new_game_path, class: "btn btn-success" %>
  </div>
</div>
