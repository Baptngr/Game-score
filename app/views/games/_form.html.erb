
<%= simple_form_for(@game) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :score_home %>
    <%= f.input :score_away %>
    <%= f.input :description %>
    <%= f.input :date %>
    <%= f.association :team_away %>
    <%= f.association :team_home %>
    <%= f.association :day %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <div>
  <%= link_to "Voir les team", teams_path %>
</div>

<% end %>
