<%= simple_form_for(@game, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="form-group">
      <%= f.label :score_home, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.input :score_home, label: false, input_html: { class: 'form-control' } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :score_away, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.input :score_away, label: false, input_html: { class: 'form-control' } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.input :description, label: false, input_html: { class: 'form-control' } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :date, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.input :date, label: false, input_html: { class: 'form-control' } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :team_away_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.association :team_away, label: false, input_html: { class: 'form-control' } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :team_home_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.association :team_home, label: false, input_html: { class: 'form-control' } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :day_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.association :day, label: false, input_html: { class: 'form-control' } %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= link_to "Voir les teams", teams_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>