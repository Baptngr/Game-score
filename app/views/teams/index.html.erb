<% if notice.present? %>
  <div class="alert alert-success text-center">
    <%= notice %>
  </div>
<% end %>

<% content_for :title, "Teams" %>

<div class="container mt-4">
  <h1 class="text-center mb-4 text-primary">Teams</h1>

  <div class="row">
    <% @teams.each do |team| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm border-0">
          <div class="card-body text-center">
            <%= render team %>
            <a href="<%= team_path(team) %>" class="btn btn-outline-primary mt-2">Show this team</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "New Team", new_team_path, class: "btn btn-primary px-4 py-2" %>
    <%= link_to "Voir les matchs", game_path, class: "btn btn-outline-primary px-4 py-2" %>
  </div>
</div>
